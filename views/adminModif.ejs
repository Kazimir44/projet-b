<%- include('header') -%>

<h1 class="form-title">Modifier Utilisateur</h1>

    
    <form action="/modifierUser/<%= user.id %>" method="post" class="user-form">
    
    <div class="form-group">
        <label for="prename" class="form-label">Prénom:</label>
        <input type="text" id="prename" name="prename" value="<%= user.prename %>" class="form-input" required>
    </div>
    <div class="form-group">
        <label for="name" class="form-label">Nom:</label>
        <input type="text" id="name" name="name" value="<%= user.name %>" class="form-input" required>
    </div>
    <div class="form-group">
        <label for="email" class="form-label">Email:</label>
        <input type="email" id="email" name="email" value="<%= user.email %>" class="form-input" required>
    </div>
    <div class="form-group">
        <label for="role" class="form-label">Rôle:</label>
        <input type="text" id="role" name="role" value="<%= user.role %>" class="form-input" required>
    </div>
    <div class="form-group">
        <label for="age" class="form-label">Âge:</label>
        <input type="number" id="age" name="age" value="<%= user.age %>" class="form-input" required>
    </div>
    <div class="form-group">
        <label for="taille" class="form-label">Taille:</label>
        <input type="number" id="taille" name="taille" value="<%= user.taille %>" class="form-input"  required>
    </div>
    <div class="form-group">
        <label for="poids" class="form-label">Poids:</label>
        <input type="number" id="poids" name="poids" value="<%= user.poids %>" class="form-input" required>
    </div>
    <div class="form-group">
        <label for="adresse" class="form-label">Adresse:</label>
        <input type="text" id="adresse" name="adresse" value="<%= user.adresse %>" class="form-input" required>
    </div>
    <div class="form-group">
        <label for="choixformule" class="form-label">Choix de la formule:</label>
        <select id="choixformule" name="choixformule" required>
            <option value="1">Junior(7 ans/14 ans)</option>
            <option value="2">Loisir/Débutant</option>
            <option value="3">Amateur/Elite</option>
        </select>
        
    </div>
    <button type="submit" class="form-button">Modifier</button>
      <a href="/deleteUserAdmin/<%= user.id %>">Supprimer</a>
</form>
<%- include('footer') -%>