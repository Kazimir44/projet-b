<%- include('header') -%>

<main class="contact-form">
    <h2>Formulaire de Contact</h2>
    <form class="form" method="post">
        <div class="form-group">
            <label for="name">Nom</label>
            <input class="form-control" type="text" name="name" id="name" value="<%= locals.contact ? contact.lastName : '' %>">
        </div>
        <div class="form-group">
            <label for="prename">Prénom</label>
            <input class="form-control" type="text" name="prename" id="prename" value="<%= locals.contact ? contact.surname : '' %>">
        </div>
        <div class="form-group">
            <label for="phone">Téléphone</label>
            <input class="form-control" type="text" name="phone" id="phone" value="<%= locals.contact ? contact.phone : '' %>">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" type="email" name="email" id="email" value="<%= locals.contact ? contact.email : '' %>">
        </div>
        <div class="form-group">
            <label for="message">Message</label>
            <textarea class="form-control" name="message" id="message" rows="4"><%= locals.contact ? contact.message : '' %></textarea>
        </div>
        <div class="button-group">
            <button class="btn btn-primary" type="submit">Enregistrer</button>
            <button class="btn btn-secondary" type="reset">Annuler</button>
        </div>
    </form>
</main>
<%- include('footer') -%>
