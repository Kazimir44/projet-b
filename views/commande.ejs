<%- include('header') -%>
<main class="main-container">
    <h3 class="section-title">BOUTIQUE DU CLUB !!!</h3>
    <div class="product-list">
        <div class="product">
            <img src="/images/boutique1.jpg" alt="tee-shirt-de-boxe" />
            <p>Prix: 45€</p>
        </div>
        <div class="product">
            <img src="/images/boutique2.jpg" alt="short-de-boxe" />
            <p>Prix: 35€</p>
                     </div>
    </div>
    
<h3>PASSER COMMANDE !!!</h3>

<form method="post" action="/commande" class="formLogin">

    <label for="produit">Produit :</label>

<div id="productContainer" >
    <div class="dynamiqueInput">
        <select id="produit" name="produit[]">
            
            <% for (let produit of produits) { %>
            <option value=<%= produit.id %> ><%=produit.name %></option>
            <% } %>
        </select><br>
        <label for="taille">Taille :</label>
            <select id="taille" name="taille[]">
                <option value="small">Small</option>
                <option value="medium">Medium</option>
                <option value="large">Large</option>
                <option value="x-large">X-Large</option>
            </select><br>
            <label for="quantite">Quantité :</label>
            <input type="number" id="quantite" name="quantite[]" required><br>

    </div>
</div>
    <button type="submit">Passer la commande</button>
</form>
</main>
<%- include('footer') -%>
